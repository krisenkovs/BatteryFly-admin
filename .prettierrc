{
  "tabWidth": 2,
  "printWidth": 120,
  "trailingComma": "all",
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "importOrder": [
    "^(constants)/(.*)$",
    "^(components)/(.*)$",
    "^(modules)/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": ["typescript", "jsx", "classProperties", "decorators-legacy"]
}
